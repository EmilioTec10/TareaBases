<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.LoginPage">

    <StackLayout Padding="20">
        <Entry Placeholder="Correo electrónico" x:Name="txtCorreo" />
        <Entry Placeholder="Contraseña" IsPassword="True" x:Name="txtContrasena" />
        <Button Text="Iniciar Sesión" Clicked="OnLoginClicked" />
        <Button Text="Registrarse" Clicked="OnRegisterClicked" />
    </StackLayout>

</ContentPage>
