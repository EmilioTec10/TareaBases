<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.EstadoPage">

    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label Text="Estado del Pedido" FontSize="Large" HorizontalOptions="Center" Margin="0,20,0,10"/>
            <StackLayout x:Name="listaPlatos" Margin="0,10"/>
            <ProgressBar x:Name="progresoPedido" ProgressColor="Green" Margin="0,20,0,10"/>
            <Label x:Name="pedidoListoLabel" Text="¡Tu pedido está listo!" FontSize="Large" HorizontalOptions="Center" Margin="0,10" IsVisible="False"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
