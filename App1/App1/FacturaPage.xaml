<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.FacturaPage">

    <ContentPage.Content>
        <StackLayout Padding="10">
            <!-- Agregar un Label para mostrar el número de factura -->
            <Label Text="{Binding NumeroFactura}" FontSize="Medium" HorizontalOptions="Center"/>
            <Label x:Name="FacturaLabel" FontSize="Medium"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
